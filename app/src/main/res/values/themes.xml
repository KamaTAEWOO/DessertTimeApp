<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DessertTimeApp" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item> <!-- status bar transparent -->
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <!--    splash-->
    <style name="Theme.DessertTimeApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/bg_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_screen_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.DessertTimeApp</item>
        <item name="android:windowTranslucentStatus">true</item> <!-- status bar transparent -->
        <item name="android:statusBarColor">#00000000</item>
    </style>
</resources>